}


%%SELECTOR%% .eh-webgl-lone-slider__image-placeholder {
	top: {{ design.images.position.y}}%;
  left: {{ design.images.position.x}}%;
  transform: translate(-{{ design.images.position.x}}%, -{{ design.images.position.y}}%);
  width: {{ design.images.width.style }};
  height: {{ design.images.height.style }};
}


%%SELECTOR%% .eh-webgl-lone-slider__slides {
  top: {{ design.content_items_container.position.y}}%;
  left: {{ design.content_items_container.position.x}}%;
  transform: translate(-{{ design.content_items_container.position.x}}%, -{{ design.content_items_container.position.y}}%);
  width: {{ design.content_items_container.width.style }};
  height: {{ design.content_items_container.height.style }};
  {{ macros.background(design.content_items_container.background) }}
